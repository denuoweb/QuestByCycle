threads = int(os.getenv("GUNICORN_THREADS", "4"))
timeout = int(os.getenv("GUNICORN_TIMEOUT", "120"))

# Log to stdout/stderr so the platform captures logs
accesslog = "-"
errorlog = "-"

# Tell Gunicorn where your WSGI app is. Your script already exports WSGI_APP=wsgi:app
