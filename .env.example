# Directory to store uploaded files
UPLOAD_FOLDER=images
# Directory for verification images
VERIFICATIONS=verifications
# Directory for badge image files
BADGE_IMAGE_DIR=badge_images
# Directory containing CSV imports for quests
TASKCSV=csv
# Base domain for links and redirects
# For production on questbycycle.org use:
# LOCAL_DOMAIN=questbycycle.org
# For local development, override in your real .env (not this example):
LOCAL_DOMAIN=questbycycle.org
# Path to the ffmpeg binary for video processing
FFMPEG_PATH=ffmpeg
# Image used when no upload is provided
PLACEHOLDER_IMAGE=images/default-placeholder.webp
# Log SQL statements when true
SQLALCHEMY_ECHO=false
# Version string appended to static assets for cache busting
ASSET_VERSION=1.2.0

# Username for the initial super admin account
DEFAULT_SUPER_ADMIN_USERNAME=test
# Password for the initial super admin account
DEFAULT_SUPER_ADMIN_PASSWORD=test
# Email for the initial super admin account
DEFAULT_SUPER_ADMIN_EMAIL=test@test.com
# Secret key for cryptographic signing
SECRET_KEY=23456789
# Require HTTPS for the session cookie
SESSION_COOKIE_SECURE=true
# Name of the session cookie
SESSION_COOKIE_NAME=QuestsByCycles_Session
# SameSite attribute for the session cookie
SESSION_COOKIE_SAMESITE=Lax
# Optional domain for the session cookie
# Use a leading dot to cover both apex and www (questbycycle.org / www.questbycycle.org)
SESSION_COOKIE_DOMAIN=.questbycycle.org
# Refresh the session on each request
SESSION_REFRESH_EACH_REQUEST=true
# Days to remember a user's login
REMEMBER_COOKIE_DURATION_DAYS=7

# Enable Flask debug mode
DEBUG=true
# Enable rate limiting (set to false for development)
RATE_LIMIT_ENABLED=false
# Database connection string
SQLALCHEMY_DATABASE_URI=

# OpenAI API key for AI quest generation
OPENAI_API_KEY=

# Mail server hostname
MAIL_SERVER=localhost
# Mail server port
MAIL_PORT=2525
# Use TLS for outgoing mail
MAIL_USE_TLS=false
# Use SSL for outgoing mail
MAIL_USE_SSL=false
# Mail server username
MAIL_USERNAME=
# Mail server password
MAIL_PASSWORD=
# Default address used as the sender
MAIL_DEFAULT_SENDER=info@questbycycle.org

# Twitter handle used for updates
TWITTER_USERNAME=
# Twitter API key
TWITTER_API_KEY=
# Twitter API secret
TWITTER_API_SECRET=
# Twitter access token
TWITTER_ACCESS_TOKEN=
# Twitter access token secret
TWITTER_ACCESS_TOKEN_SECRET=
# Facebook app ID
FACEBOOK_APP_ID=
# Facebook app secret
FACEBOOK_APP_SECRET=
# Facebook access token
FACEBOOK_ACCESS_TOKEN=
# Facebook page ID
FACEBOOK_PAGE_ID=
# Instagram access token
INSTAGRAM_ACCESS_TOKEN=
# Instagram user ID
INSTAGRAM_USER_ID=

# PayPal REST client ID
PAYPAL_CLIENT_ID=
# PayPal REST client secret
PAYPAL_CLIENT_SECRET=
# PayPal API base URL
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com

# SHA256 fingerprint for the Trusted Web Activity
TWA_SHA256_FINGERPRINT=

# VAPID public key for web push
VAPID_PUBLIC_KEY=
# VAPID private key for web push
VAPID_PRIVATE_KEY=
# Contact email for push notifications
VAPID_ADMIN_EMAIL=push@example.com

# Enable Redis-backed task queue
USE_TASK_QUEUE=true
# Redis connection URL for the task queue
REDIS_URL=redis://localhost:6379/0

# Google Cloud Storage bucket used for uploads
GCS_BUCKET=
# Base URL for public GCS assets
GCS_BASE_URL=
# Storage class for uploaded files
GCS_STORAGE_CLASS=ARCHIVE

# Google Oauth
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=yyyyyyyyyyyyyyyyyyyyyyyy
# Local HTTP testing
OAUTHLIB_INSECURE_TRANSPORT=0
