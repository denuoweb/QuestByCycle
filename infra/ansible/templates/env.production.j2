UPLOAD_FOLDER=images
VERIFICATIONS=verifications
BADGE_IMAGE_DIR=badge_images
TASKCSV=csv
LOCAL_DOMAIN=questbycycle.org

# Super-admin credentials
DEFAULT_SUPER_ADMIN_USERNAME={{ default_super_admin_username }}
DEFAULT_SUPER_ADMIN_PASSWORD={{ default_super_admin_password }}
DEFAULT_SUPER_ADMIN_EMAIL={{ default_super_admin_email }}

# Flask application secret
SECRET_KEY={{ app_secret_key }}
SESSION_COOKIE_SECURE={{ session_cookie_secure }}
SESSION_COOKIE_NAME=QuestsByCycles_Session
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_DOMAIN=questbycycle.org
SESSION_REFRESH_EACH_REQUEST=true
REMEMBER_COOKIE_DURATION_DAYS=7

# Database
SQLALCHEMY_DATABASE_URI={{ sqlalchemy_database_uri_production }}

# Mail server
MAIL_SERVER=localhost
MAIL_PORT=2525
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME={{ mail_username }}
MAIL_PASSWORD={{ mail_password }}
MAIL_DEFAULT_SENDER={{ mail_default_sender }}

# Third-party APIs
OPENAI_API_KEY={{ openai_api_key }}

# Twitter
TWITTER_USERNAME={{ twitter_username }}
TWITTER_API_KEY={{ twitter_api_key }}
TWITTER_API_SECRET={{ twitter_api_secret }}
TWITTER_ACCESS_TOKEN={{ twitter_access_token }}
TWITTER_ACCESS_TOKEN_SECRET={{ twitter_access_token_secret }}

# Facebook
FACEBOOK_APP_ID={{ facebook_app_id }}
FACEBOOK_APP_SECRET={{ facebook_app_secret }}
FACEBOOK_ACCESS_TOKEN={{ facebook_access_token }}
FACEBOOK_PAGE_ID={{ facebook_page_id }}

# Instagram
INSTAGRAM_ACCESS_TOKEN={{ instagram_access_token }}
INSTAGRAM_USER_ID={{ instagram_user_id }}

# Web Push (VAPID)
TWA_SHA256_FINGERPRINT={{ twa_sha256_fingerprint }}
VAPID_PUBLIC_KEY={{ vapid_public_key }}
VAPID_PRIVATE_KEY={{ vapid_private_key }}
VAPID_ADMIN_EMAIL={{ vapid_admin_email }}
