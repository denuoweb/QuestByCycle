server {
    listen 80;
    server_name questbycycle.org www.questbycycle.org dev.questbycycle.org;

    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name questbycycle.org www.questbycycle.org;

    ssl_certificate /etc/letsencrypt/live/questbycycle.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/questbycycle.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root {{ app_dir }};
    index index.html;

    # Proxy to prod Gunicorn
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # static, media, and other configs as you have now...
}

server {
    listen 443 ssl http2;
    server_name dev.questbycycle.org;

    ssl_certificate /etc/letsencrypt/live/dev.questbycycle.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.questbycycle.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root {{ app_dir }};
    index index.html;

    # Proxy to dev Gunicorn
    location / {
        proxy_pass http://127.0.0.1:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
